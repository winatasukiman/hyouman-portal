<odoo>
    <record id="goal_period_view_tree" model="ir.ui.view">
        <field name="name">goal.period.tree</field>
        <field name="model">goal.period</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="goal_period_action" model="ir.actions.act_window">
        <field name="name">Goal Periods</field>
        <field name="res_model">goal.period</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>